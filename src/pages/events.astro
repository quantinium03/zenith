---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import Footer from "../components/Footer.astro";
---
<Layout>
    <div class="bg-cover bg-center py-16" style="background-image: url('/gallery-bg.jpg')">
        <div class="container mx-auto px-4 mb-8">
            <h1 class="text-4xl lg:text-6xl font-bold underline text-center mb-12">
                HACKATHON EVENTS
            </h1>
            
            <div class="mx-auto flex flex-wrap justify-center gap-8 pb-8">
                <div
                    class="event-card flex-grow relative min-h-[300px] text-white rounded-lg md:max-w-[calc(50%-1rem)] md:flex-basis-[calc(50%-1rem)]">
                    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat"
                         style="background-image: url('/events/hackathon.jpeg');">
                    </div>
                    <div class="absolute inset-0 bg-black/60 z-0"></div>
                    <div class="relative z-10 p-6 flex flex-col">
                        <h3 class="text-shadow text-3xl font-bold mb-2 text-center">ZENITH 4.0</h3>
                        <h4 class="text-shadow text-xl font-bold mb-4 text-center">A 24HR HACKATHON</h4>
                        <p class="text-shadow text-lg mt-2">Dive into the ultimate coding marathon where creativity meets
                            resilience. Build, innovate, and showcase your solutions to real-world challenges.</p>
                        <div class="mt-auto">
                            <p class="text-shadow text-lg">- Exciting Prices</p>
                            <p class="text-shadow text-lg">- Teamwork and Networking</p>
                        </div>
                    </div>
                </div>

                <div
                    class="event-card flex-grow relative min-h-[300px] text-white border border-zinc-600 shadow-xl rounded-lg md:max-w-[calc(50%-1rem)] md:flex-basis-[calc(50%-1rem)]">
                    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat"
                        style="background-image: url('https://static1.makeuseofimages.com/wordpress/wp-content/uploads/2023/02/rust-code-that-interacts-with-files-1.jpg?q=50&fit=crop&w=1140&h=&dpr=1.5');">
                    </div>
                    <div class="absolute inset-0 bg-black/60 z-0"></div>
                    <div class="relative z-10 p-6 flex flex-col">
                        <h3 class="text-shadow text-3xl font-bold mb-4 text-center">CODE CADET XVI</h3>
                        <p class="text-shadow text-lg mt-2">CodeCadet is the perfect platform for coders to push their
                            limits, test their skills, and engage in the thrilling competition. In CodeCadet, Manan brings
                            you an offline coding challenge like no other.</p>
                        <div class="mt-auto">
                            <p class="text-shadow text-lg">- Exciting Goodies</p>
                            <p class="text-shadow text-lg">- 2hr Long Contest</p>
                        </div>
                    </div>
                </div>

                <div
                    class="event-card flex-grow relative min-h-[300px] text-white border border-zinc-600 shadow-xl rounded-lg md:max-w-[calc(50%-1rem)] md:flex-basis-[calc(50%-1rem)]">
                    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat"
                         style="background-image: url('/events/tech_and_beyond.jpeg');">
                    </div>
                    <div class="absolute inset-0 bg-black/60 z-0"></div>
                    <div class="relative z-10 p-6 flex flex-col">
                        <h3 class="text-shadow text-3xl font-bold mb-4 text-center">TECH AND BEYOND</h3>
                        <p class="text-shadow text-lg mt-2">Join us for an exciting and an informative session! Explore
                            different technical domains from industry experts to take your technical mindset to the next
                            level!</p>
                        <div class="mt-auto">
                            <p class="text-shadow text-lg">- 500+ Active Listeners</p>
                            <p class="text-shadow text-lg">- Q&A session</p>
                        </div>
                    </div>
                </div>

                <div
                    class="event-card flex-grow relative min-h-[300px] text-white border border-zinc-600 shadow-xl rounded-lg md:max-w-[calc(50%-1rem)] md:flex-basis-[calc(50%-1rem)]">
                    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat"
                         style="background-image: url('/events/xunbao.jpeg');">
                    </div>
                    <div class="absolute inset-0 bg-black/60 z-0"></div>
                    <div class="relative z-10 p-6 flex flex-col">
                        <h3 class="text-shadow text-3xl font-bold mb-4 text-center">XUNBAO - ONLINE QUIZ</h3>
                        <p class="text-shadow text-lg mt-2">Xunbao is our annual quizzing event that fuses pop culture with
                            technology in mindbending ways. From viral memes to cutting-edge tech, it's a hunt for the
                            sharpest minds and the fastest thinkers.</p>
                        <div class="mt-auto">
                            <p class="text-shadow text-lg">- Exciting Goodies</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <Footer />
</Layout>

<style>
    .text-shadow {
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    .event-card {
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
    }

    @media (max-width: 768px) {
        .event-card {
            margin-bottom: 20px;
            width: 100%;
        }
        
        .container {
            padding-bottom: 4rem;
        }
    }
</style>
